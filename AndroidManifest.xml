<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="it.localhost.trafficdroid"
	android:versionCode="131"
	android:versionName="1.19.2 DisconnectedFromThePast" >

	<uses-sdk
		android:minSdkVersion="11"
		android:targetSdkVersion="17" />

	<supports-screens
		android:largeScreens="true"
		android:xlargeScreens="true" />

	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="com.android.vending.BILLING" />

	<application
		android:name=".common.TdApp"
		android:allowBackup="false"
		android:icon="@drawable/ic_launcher_trafficdroid"
		android:label="@string/app_name" >
		<activity
			android:name=".activity.MainActivity"
			android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.PreferencesActivity" />
		<activity android:name=".activity.WebViewActivity" />
		<activity android:name=".activity.PedaggioActivity" />
		<activity android:name=".activity.BolloActivity" />
		<activity
			android:name="com.google.ads.AdActivity"
			android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
		<activity android:name=".widget.activity.WidgetZoneActivity" >
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
			</intent-filter>
		</activity>
		<activity android:name=".widget.activity.WidgetStreetActivity" >
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
			</intent-filter>
		</activity>

		<receiver android:name="com.commonsware.cwac.wakeful.AlarmReceiver" >
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
				<action android:name="android.intent.action.EXTERNAL_APPLICATIONS_AVAILABLE" />
			</intent-filter>

			<meta-data
				android:name="com.commonsware.cwac.wakeful"
				android:resource="@xml/wakeful" />
		</receiver>
		<receiver
			android:name=".widget.provider.WidgetZoneProvider"
			android:label="@string/widgetZoneName" >
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>

			<meta-data
				android:name="android.appwidget.provider"
				android:resource="@xml/widget_zone_info" />
		</receiver>
		<receiver
			android:name=".widget.provider.WidgetStreetProvider"
			android:label="@string/widgetStreetName" >
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>

			<meta-data
				android:name="android.appwidget.provider"
				android:resource="@xml/widget_street_info" />
		</receiver>

		<service android:name=".service.TdService" />
	</application>

</manifest>