<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="it.localhost.trafficdroid.premium"
	android:versionCode="133"
	android:versionName="1.20.1 forewarnedIsForearmed" >

	<uses-sdk
		android:minSdkVersion="8"
		android:targetSdkVersion="8" />

	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />

	<application
		android:name="it.localhost.trafficdroid.common.TdApp"
		android:allowBackup="false"
		android:icon="@drawable/ic_launcher_trafficdroid"
		android:label="@string/app_name" >
		<activity
			android:name="it.localhost.trafficdroid.activity.MainActivity"
			android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="it.localhost.trafficdroid.activity.PreferencesActivity" />
		<activity android:name="it.localhost.trafficdroid.activity.WebViewActivity" />
		<activity android:name="it.localhost.trafficdroid.activity.PedaggioActivity" />
		<activity android:name="it.localhost.trafficdroid.activity.PatenteActivity" />
		<activity android:name="it.localhost.trafficdroid.activity.BolloActivity" />
		<activity android:name="it.localhost.trafficdroid.widget.activity.WidgetZoneActivity" >
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
			</intent-filter>
		</activity>
		<activity android:name="it.localhost.trafficdroid.widget.activity.WidgetStreetActivity" >
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
			</intent-filter>
		</activity>

		<receiver android:name="com.commonsware.cwac.wakeful.AlarmReceiver" >
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
				<action android:name="android.intent.action.EXTERNAL_APPLICATIONS_AVAILABLE" />
			</intent-filter>

			<meta-data
				android:name="com.commonsware.cwac.wakeful"
				android:resource="@xml/wakeful" />
		</receiver>
		<receiver
			android:name="it.localhost.trafficdroid.widget.provider.WidgetZoneProvider"
			android:label="@string/widgetZoneName" >
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>

			<meta-data
				android:name="android.appwidget.provider"
				android:resource="@xml/widget_zone_info" />
		</receiver>
		<receiver
			android:name="it.localhost.trafficdroid.widget.provider.WidgetStreetProvider"
			android:label="@string/widgetStreetName" >
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>

			<meta-data
				android:name="android.appwidget.provider"
				android:resource="@xml/widget_street_info" />
		</receiver>

		<service android:name="it.localhost.trafficdroid.service.TdService" />
	</application>

</manifest>