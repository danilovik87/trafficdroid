<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_height="wrap_content"
	android:layout_width="fill_parent" android:background="#333333">
	<TextView android:id="@id/streetDirLeft"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:gravity="center" android:layout_weight="2" />
	<TextView android:id="@id/streetName" android:textStyle="bold"
		android:layout_weight="1" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:gravity="center" />
	<TextView android:id="@id/streetDirRight"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:gravity="center" android:layout_weight="2" />
</LinearLayout>