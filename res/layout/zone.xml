<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:stretchColumns="*">
	<TableRow android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/zoneName" android:layout_width="wrap_content"
			android:layout_span="3" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal">
		</TextView>
	</TableRow>
	<TableRow android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/speedLeft" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
		</TextView>
		<ImageView android:layout_height="20dp"
			android:src="@android:drawable/ic_menu_camera" />
		<TextView android:id="@+id/speedRight" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
		</TextView>
	</TableRow>
</TableLayout>
