<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@id/zoneKm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:textStyle="italic" />

        <TextView
            android:id="@id/zoneName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@id/trendLeft"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/trendSpeedTitle" />

        <TextView
            android:id="@id/zoneSpeedLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <ImageView
            android:id="@id/zoneAutoveloxLeft"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/warning"
            android:gravity="center" />

        <ImageView
            android:id="@id/zoneCam"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/providerCamDefault"
            android:gravity="center" />

        <ImageView
            android:id="@id/zoneAutoveloxRight"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/warning"
            android:gravity="center" />

        <TextView
            android:id="@id/zoneSpeedRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <ImageView
            android:id="@id/trendRight"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/trendSpeedTitle" />
    </LinearLayout>

</LinearLayout>